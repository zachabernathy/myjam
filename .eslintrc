{
  "env": {
    "browser": true,
    "es6": true
  },
  "extends": [
    "eslint:recommended"
  ],
  "parserOptions": {
    "ecmaVersion": 2018
  },
  "rules": {
    "no-var": "error",
    "no-unused-vars": "warn",
    "no-eval": "error",
    "no-console": ["error", {
      "allow": ["warn", "error", "info"]
    }],
    "indent": ["error", 2],
    "quotes": ["error", "single"],
    "semi": ["error", "always"],
    "space-before-function-paren": ["error", "never"],
    "prefer-arrow-callback": [0, {
      "allowNamedFunctions": true
    }],
    "func-names": ["error", "never"],
    "no-use-before-define": ["error", {
      "functions": true,
      "classes": true
    }]
  }
}
